<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the Zone"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"/>
    <Spinner
        android:id="@+id/zone_spinner"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/spinner_background"
        android:layout_height="40dp"
       />

    <TextView
        android:id="@+id/areaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the Area"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"/>
    <Spinner
        android:id="@+id/area_spinner"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/spinner_background"
        android:layout_height="40dp"
        />

    <TextView
        android:id="@+id/policeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the police Station"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"/>
    <Spinner
        android:id="@+id/police_spinner"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/spinner_background"
        android:layout_height="40dp"
        />

    <TextView
        android:id="@+id/policeStationnumberText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the police Station number"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter date"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/license_expirydate_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:drawableRight="@drawable/date_icon"
        android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint=""
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/ratingBar"
        android:layout_alignLeft="@+id/ratingBar"
        android:text="Submit"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:id="@+id/submit"
        android:background="@drawable/button_bg"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"/>

</LinearLayout>
